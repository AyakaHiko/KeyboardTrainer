<UserControl x:Name="Base" x:Class="KeyboardTrainer.LetterButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyboardTrainer"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" SizeChanged="Base_SizeChanged">
    <Grid>
        <Border x:Name ="Body"  BorderThickness="10" BorderBrush="Black" CornerRadius="15" Background="Aquamarine">
            <TextBlock x:Name="LetterBlock" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60">a</TextBlock>
        </Border>
    </Grid>
</UserControl>
